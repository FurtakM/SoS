On BuildingStarted(building, unit) Do
begin
    if GetBType(building) = b_depot AND NOT IsInArea(building, HillArea) then
        Dial_DepotInWrongPlace(building);
end;

On BuildingComplete(building) Do
begin
    if GetBType(building) = b_depot AND IsInArea(building, HillArea) AND NOT startEvacuation then
        Dial_FinishDepot; 
end;