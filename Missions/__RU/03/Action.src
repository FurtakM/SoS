    if FilterAllUnits([[f_side, 3], [f_type, unit_vehicle], [f_nation, nation_russian], [f_not, [f_weapon, ru_cargo_bay]]]) >= FilterAllUnits([[f_side, 3], [f_type, unit_human]]) + 2 then
