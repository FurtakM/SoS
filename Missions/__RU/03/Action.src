        kirovAttackVehicles = kirovAttackVehicles ^ vehs;

        SetSide(vehs, 6);

        produceMoreVehicles = true;

        ComEnterUnit(mechs[1], vehs[1]);
        ComEnterUnit(mechs[2], vehs[2]);

