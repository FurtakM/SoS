Export Charles, AmSol, Gladstone;

Export Function PrepareAmericans;
begin
    uc_side = 1;

    hc_class := 1;
    hc_sex := sex_male;
    hc_gallery := 'AmGalRemake';
    hc_face_number := 1;
    hc_name := 'Charles Brown';
    hc_attr := [12, 11];
    hc_skills := [1, 0, 1, 1];

    Charles = CreateHuman;

    hc_class := 1;
    hc_sex := sex_female;
    hc_gallery := 'AmGalRemake';
    hc_face_number := 2;
    hc_name := 'Holland';
    hc_attr := [12, 11];
    hc_skills := amSoldSkillLevel;

    AmSol = CreateHuman;
    PlaceUnitArea(AmSol, JohannaSpawnArea, false);
    
    ComEnterUnit(AmSol, am_bun);

    Gladstone := PrepareUnit('Gladstone', false);
    PlaceHumanInUnit(Gladstone, am_lab);
end;
