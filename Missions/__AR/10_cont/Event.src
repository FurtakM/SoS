On VehicleConstructed(veh, fac) do
begin

     if GetSide(fac) = 5 then 
        if GetWeapon(veh) = ar_control_tower then
           control_towers := control_towers ^ veh
            else
             if GetWeapon(veh) <> ar_cargo_bay then
                ar_vehs := ar_vehs ^ veh;
End;


On ResearchStarted(tech, lab) do
begin
if tech = 3 then
   ape_brain := true;
if tech = 4 then
   ape_neut := true;
End;