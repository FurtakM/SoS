On UnitDestroyed(un) do
begin

     If un = Louis then
      begin
      YouLost('dead');
      end;

     If un = Abdul then
      begin
      YouLost('sdead');
      end;

End;

On UnitGoesToRed(un) do
begin

     If un = Louis and FilterAllUnits([f_side, 2]) < 2 then
      begin
      YouLost('dead');
      end;


     If un in FilterAllUnits([f_side, 6]) then
      begin
      dialogs(un, Rand(1,5));
      end;

End;