Every 0$01 do
begin
enable;

       clock := clock + 0$01;

       if spoted = false then
       Display_Strings := ['#Ar05-1', clock, '#Ar05-2']
        else
       Display_Strings := ['#Ar05-1', clock, '#Ar05-3',
                           '#Ar05-4', veh_count];



       if clock mod 10$00 = 0 then
          music_nat := 4;

       if clock mod 15$00 = 0 then
          music_nat := 3;

End;