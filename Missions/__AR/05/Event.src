// events
On UnitDestroyed(un) do
begin

     If GetSide(un) = 2 then
        ar_count := ar_count + 1;


     If GetSide(un) = 3 and un in FilterAllUnits([f_btype, b_bunker]) then
        smart_count := smart_count + 1;

     If un = Louis then
        YouLost('louisded');

End;


On EnterBuilding(b, un) do
begin

      If un in FilterAllUnits([[f_side, 3], [f_class, 2]]) then
         SetLives(un, 1000);

End;
