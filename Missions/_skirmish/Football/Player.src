Export Function PreparePlayer;
var i, k;
begin
uc_side := 1;
uc_nation := 1;
k := 1;

hc_importance := 100;
PrepareHuman(false, 1, skill);
PlaceUnitArea(CreateHuman, PlayerArea, false);

hc_importance := 0;

for i = 1 to 8 do
    begin
    PrepareHuman(true, k, skill);
    PlaceUnitArea(CreateHuman, PlayerArea, false);
    if (i mod 2 = 0) then
        k = k + 1;
    end;

End;