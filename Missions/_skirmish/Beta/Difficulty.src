export game_diff;
export game_skill, game_eskill;
export jmmArrival, ruArrival;

Export Function GameType;
begin

     Case Query('GameDiff') of
     1: game_diff := 1; // easy
     2: game_diff := 2; // medium
     3: game_diff := 3; // hard
     end;

     // player and enemy skills
        game_skill := [8, 7, 6][game_diff];
        game_eskill := [6, 7, 8][game_diff];

     // time to Russians arrival
     ruArrival := [20$00, 15$00, 10$00][game_diff];

     // time to JMM arrival
     jmmArrival := [40$00, 50$00, 60$00][game_diff];
End;