// TICK TICK
Every 0$01 do
begin
enable;

     Display_Strings := ['#Tick', tick,
                         '#Attack', time_to,
                         '#Points', points,
                         '#Wave', wave,
                         '#Type', p
                         ];

End;


// When game started
Export points, bonus_points, time_to, wave, p;
Every 0$01 do
begin
points := 0;
bonus_points := 0;
time_to := 0$00;
wave := 1;
p := 1;
end;





