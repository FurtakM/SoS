Starting
begin
InGameOn;

CenterNowOnXY(0, 0);

RandomizeAll;
DestroyTrash;
ShowPath;

RandMusic(1,3);

Wait(0$01);

Case Query('textdiff') of
1: SetDifficulty(1);
2: SetDifficulty(2);
3: SetDifficulty(3);
end;

PrepareAnimals([8,7,6][dif], 2, 3, nature);
PrepareRussian;
Action;
PrepareAmerican;
End;



Every 2$00+1$0 do
var i, bool;
begin
bool := Rand(false, true);

if bool then
   RandMusic(1,3);

enable;
End;
        