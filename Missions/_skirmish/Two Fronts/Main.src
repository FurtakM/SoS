Export Jakes, Sylvia;
Export dialogTrans, playerLoss;
Export call, alfaNorthTriggered, alfaSouthTriggered, attackWave1, attackWave2;
Export lastRadioMsg, lastRadioAttackMsg;
Function InitGlobalVar;
begin
dialogTrans := true;
call := true;
alfaNorthTriggered := false;
alfaSouthTriggered := false;
playerLoss := 0;
callUsed := false;
attackWave1 := 0;
attackWave2 := 0;
lastRadioMsg := 0$00;
lastRadioAttackMsg := 0$00;
End;

