Starting
begin
ResetFog;

InitGame;

PrepareLegion;
PrepareAllies;

Action;
End;

Function InitGame;
begin
RandomizeAll;

case query('textdiff') of
1: Difficulty := 1;
2: Difficulty := 2;
3: Difficulty := 3;
end;

InitVariables;
SetDiplomacy;
End;

