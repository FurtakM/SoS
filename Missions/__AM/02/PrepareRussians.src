Export function PrepareRussianAttack(count, area);
var i, veh, un, tmp, mech, mechs;
begin
uc_side = 3;
uc_nation = 3;

for i := 1 to count do
    begin
    vc_engine = 1;
    vc_control = 1;
    vc_weapon = ru_heavy_machine_gun;

    if Difficulty = 3 then
       vc_weapon := [ru_heavy_machine_gun, ru_gatling_gun][rand(1, 2)];

    if Difficulty = 4 then
       vc_weapon := [ru_heavy_machine_gun, ru_gatling_gun, ru_gatling_gun, ru_gun][rand(1, 4)];

    vc_chassis = [21, 22, 22, 22][Difficulty];

    veh = CreateVehicle;     
    PlaceUnitArea(veh, area, false);
    attackGroup = attackGroup ^ veh;

    hc_gallery = '';
    hc_name = '';
    PrepareHuman(false, 3, rand(RuSoldMinLevel, RuSoldMaxLevel));

    un = CreateHuman;

    PlaceHumanInUnit(un, veh);

    ComMoveXY(un, 14, 9);
    end;

wait(0$1);

PrepareHuman(false, 2, rand(RuSoldMinLevel,RuSoldMaxLevel));
un = CreateHuman;

for i := 1 to count + 2 * 2 do
    begin
    hc_gallery = '';
    hc_name = '';
    PrepareHuman(sex_male, 1, rand(RuSoldMinLevel,RuSoldMaxLevel));

    un = CreateHuman;

    PlaceUnitXYR(un, 9, 13, 4, false);
    attackGroup = attackGroup ^ un;
    end;

tmp := FilterUnitsInArea(Battlefield, [[f_side, 3], [f_type, unit_human], [f_sex, sex_male]]);

Say(tmp[1], 'D9-Rus3-1');
Say(tmp[2], 'D9-Russ-1');

ComAgressiveMove(attackGroup, 31, 13);

wait(0$3);

repeat
 wait(0$1);

 for i in attackGroup do
     begin
     if IsDead(i) then
        begin
        attackGroup := attackGroup diff i;
        continue;
        end;

     if not HasTask(i) and not GetTag(i) then
        ComAttackUnit(i, NearestUnitToUnit(FilterAllUnits([f_side, 1]), i));

     if not GetTag(i) and GetLives(i) < 650 and GetType(i) = unit_vehicle then
        begin
        SetTag(i, 1);
        ComMoveXY(i, 10, 10);
        end;

     if GetTag(i) = 1 and GetDistUnitXY(i, 10, 10) < 6 and not FilterAllUnits([[f_side, 1], [f_dist, i, 8]]) then
        SetTag(i, 2);

     if GetTag(i) = 2 then
        begin  
        if GetLives(i) = 1000 then
           SetTag(i, 3)
        else if FilterAllUnits([[f_side, 1], [f_dist, i, 8]]) and not IsDrivenBy(i) then
           begin
           SetTag(i, 3);
           mech := FilterAllUnits([[f_side, 3], [f_tag, i]]);

           if mech then
              ComEnterUnit(mech[1], i);
           end
        else if IsDrivenBy(i) then
           begin
           mech := IsDrivenBy(i);
           SetTag(mech, i);

           if not See(1, mech) and GetLives(mech) < 1000 then
              SetLives(mech, 1000);

           ComRepairVehicleAndReturn(mech);
           end;
        end;

     if GetTag(i) = 3 and IsDrivenBy(i) then
        begin
        SetTag(IsDrivenBy(i), 0);
        SetTag(i, 0)
        end;
     end;
until not attackGroup;
end;

Every 0$1 trigger UnitFilter(attackGroup, [f_type, unit_vehicle]) do
var i;
begin
enable;

for i in UnitFilter(attackGroup, [f_type, unit_vehicle]) do
    if GetFuel(i) < 3 then
       SetFuel(i, 3);
End;

Every 0$2 trigger ruPatrol do
begin
if not UnitFilter(ruPatrol, [f_ok]) then
   exit;

if GetDistUnitXY(ruPatrol[1], 92, 44) < 3 and not HasTask(ruPatrol[1]) then
   begin
   wait(0$5);
   ComAgressiveMove(ruPatrol[1], 122, 68);
   end
else if not HasTask(ruPatrol[1]) then
   begin
   wait(0$5);
   ComAgressiveMove(ruPatrol[1], 92, 44);
   end;

enable;
End;
