Starting
begin
ResetFog;

Init;
PrepareNature;
PrepareArabian;
PrepareAmerican;

if debug then
   FogOff(2);

Action;
End;

Export debug, prefix, gameStarted, farmerBaseReady, americanBaseSpoted, americanBaseCaptured,
       americanHasEscaped, deadCounter, farmerOnMap, workshopBuilded, retreatAllowed, allowConvoys,
       farmerCrates, farmerRequestedCrates, farmerCratesCounter;
Function Init;
begin
debug := true;
prefix := '02_';
deadCounter := 0;
gameStarted := false;
farmerBaseReady := false;
americanBaseSpoted := false;
americanBaseCaptured := false;
americanHasEscaped := false;
farmerOnMap := true;
workshopBuilded := false;
retreatAllowed := false;
allowConvoys := false;
farmerCrates := 0;
farmerRequestedCrates := 0;
farmerCratesCounter := 3$00;
End;