          if not Researched(you,tech_apelang) then
               if GetClass(un) = class_apeman then
                    ComEnterUnit(un,building);
     end;
On SailEvent(info) do
     begin
          while not break_follow do
               begin
                    ComMoveXY(info[1],GetX(Aviradze),GetY(Aviradze));
                    wait(0$0.5);
               end;
     end;


