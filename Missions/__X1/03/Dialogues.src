                                   end;

                              CenterOnUnits(building);

                              DialogueOn;

                              Say(Heike,'D7H1');
                              Say(Aviradze,'D7Av1');
                              Say(Heike,'D7H2');
                              Say(Aviradze,'D7Av2');

                              if IsOk(Oswald) then
