On UnitDestroyed(un) do
begin
if un = Heike then
   YouLost('Heike');
End;

On VehicleConstructed(vehicle, factory) do
begin
if GetSide(factory) = 1 then
   begin
   if GetControl(vehicle) = control_remote then
      Connect(vehicle);

   usForces := Replace(usForces, usForces + 1, vehicle);
   end;
End;